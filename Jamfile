AddFilesToHaikuImage apps artpaint add-ons : Wood.so ;

AddSymlinkToHaikuImage home config be Applications : /boot/apps/artpaint/ArtPaint : ArtPaint ;

local ArtPaintDocDir = [ FDirName $(HAIKU_TOP) 3rdparty artpaint artpaint Documentation ] ;
local ArtPaintHtmFiles = [ Glob $(ArtPaintDocDir) : *.html ] ;
local ArtPaintImageFiles = [ Glob $(ArtPaintDocDir)/images : *.gif *.jpeg ] ;

AddFilesToHaikuImage apps artpaint Documentation : $(ArtPaintHtmFiles) ;
AddFilesToHaikuImage apps artpaint Documentation images : $(ArtPaintImageFiles) ;

Package ArtPaintPackage :
	ArtPaint : boot apps artpaint ;

PackageSymLink ArtPaintPackage :
	boot home config be Applications ArtPaint : /boot/apps/artpaint/ArtPaint ;

Package ArtPaintPackage :
	AHE.so
	AntiDitherer.so
	Blur.so
	Brightness.so
	Reducer.so
	ColorSeparator.so
	Color\ Balance.so
	Contrast.so
